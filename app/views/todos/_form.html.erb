<div class="row">
  <div class="col-md-4">
    <%= form_for @todo do |f| %>
      <div class="form-group">
        <%= f.label "name" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>

      <div class="form-group">
        <%= f.label "description" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Description", row: 3 %>
      </div>

      <h3>Tasks</h3>
      <div id="tasks">
        <%= f.fields_for :items do |item| %>
          <%= render 'item_fields', f: item %>
        <% end %>
        <div class="links">
          <%= link_to_add_association 'add item', f, :items %>
        </div>
      </div>
    

      <%= f.submit "Submit", class: "btn btn-primary mt-10" %>
    <% end %>
  </div>  
</div>
