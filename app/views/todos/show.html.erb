<h3><%= @todo.name %></h3>

<h5>Items</h5>

<div class="row">
  <h3>Item List</h3>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">State</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @todo.items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td>
            <%= item.state %>
          </td>
          <td>
            <% if item.state == 'undone' %>
              <%= link_to "Mark as Done", "/todo/#{@todo.id}/item/#{item.id}/toggle_state", method: :post%>
            <% else %>
              <%= link_to "Mark as UnDone", "/todo/#{@todo.id}/item/#{item.id}/toggle_state", method: :post%>
            <% end %>  
          </td>
        </tr>
      <% end %>  
    </tbody>
  </table>

</div>